@model List<LabradogApp.ViewModels.BasketItemViewModel>
@{
    ViewData["Title"] = "Basket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="SP align-items-center d-flex justify-content-center mb-5">
    <h1 class="AU">Grid Shop</h1>
</div>

<div class="container">
    <div class="d-none d-sm-none d-md-block ">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <p class="text-muted px-3 ">
                    Product Name
                </p>
            </div>
            <div class="col-lg-2 col-md-2">
                <p class="text-muted text-center">Price</p>
            </div>
            <div class="col-lg-2 col-md-2">
                <p class="text-muted text-center">
                    Quantity
                </p>
            </div>
            <div class="col-lg-2 col-md-2">
                <p class="text-muted text-center">Total</p>
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="card mb-3 border-0" style="max-width: 100%;">
                            <div class="row g-0">
                                <div class="col-md-3">
                                    <img style="width: 100%;" src="~/LabraDog/img/product1.png" class="rounded-start ms-2" alt="...">
                                </div>
                                <div class="col-md-9">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <span class="HP FFWT"> @item.Name -</span>
                                            <span class="text-muted FFWT">@item.Title.Substring(0,60)...</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="height: 10vh;" class="col-lg-2 col-sm-12 col-md-2">
                        <p style="height: 100%;" class="text-muted d-flex justify-content-center align-items-center">
                            @item.Price
                        </p>
                    </div>
                    <div style="height: 10vh;" class="col-lg-2 col-md-2 col-sm-12 d-flex justify-content-center align-items-center">
                        @*<button class="rounded-pill BTCR border-0 py-2 px-3" type="button" onClick="onClick()">+</button>*@
                        <span class="mx-3"> <a id="clicks">@item.Count</a></span>
                        @*<button class="rounded-pill BTCR2 border-0" type="button" onClick="onClickk()">-</button>*@
                    </div>
                    <div style="height: 10vh;" class="col-lg-2 col-md-2 col-sm-12">
                        <p style="height: 100%;" class="text-muted d-flex justify-content-center align-items-center">
                            @(item.TotalPrice)
                        </p>
                    </div>
                </div>

            </div>
        }

    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">

        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 d-flex justify-content-around my-2 MQ">
            <p class="justify-content-center  justify-content-lg-end d-flex align-items-center ">
                <span>Total:</span>
                <span class=" fs-4">@Model.Sum(x=>x.TotalPrice)</span>
            </p>
            <button type="button" class="btn btn-warning rounded-pill BRPB text-dark px-3 fw-bold py-2">Proceed to Checkout</button>
        </div>

    </div>

</div>

