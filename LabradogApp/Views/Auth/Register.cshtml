<div class="container my-5">
    <h4 class="RP text-center">Registr</h4>
    <form action="@Url.Action("register", "auth")" method="post">
        <div class="row justify-content-center px-3">
            <div class="col-lg-2 col-md-2 col-sm-12">
                <input class="rounded-pill form-control form-control-sm form-control-has-validation form-control-last-child my-2 py-2" type="text" name="name" placeholder="Name" required>
            </div>

            <div class="col-lg-2 col-md-2 col-sm-12">
                <input class="rounded-pill form-control form-control-sm form-control-has-validation form-control-last-child my-2 py-2" type="text" name="surname" placeholder="Surname" required>
            </div>
        </div>

        <div class="row justify-content-center px-3">
            <div class="col-lg-4 col-md-4 col-sm-12">
                <input class="rounded-pill form-control form-control-sm form-control-has-validation form-control-last-child my-2 py-2" type="text" name="email" placeholder=" E-mail" required>
            </div>

        </div>
        <div class="row justify-content-center px-3">
            <div class="col-lg-4 col-md-4 col-sm-12">
                <input class="rounded-pill form-control form-control-sm form-control-has-validation form-control-last-child my-2 py-2" type="text" name="password" placeholder="Password" required>
            </div>
        </div>


        <div class="row justify-content-center my-2">
            <div class="col-lg-4 col-md-4 col-sm-8  d-flex justify-content-center">
                <button type="submit" class="badge rounded-pill  text-light  py-3 BT w-75 " style="border-width:0px">Sign up</button>
            </div>
        </div>
    </form>
</div>